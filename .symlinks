#!/usr/bin/env bash

###############################################################################
# Symlinks                                                                    #
###############################################################################

# .zshrc
rm -rf $HOME/.zshrc
ln -s $HOME/.dotfiles/.zshrc $HOME/.zshrc

# tmux
rm -rf $HOME/.tmux.conf
ln -s $HOME/.dotfiles/.tmux.conf $HOME/.tmux.conf

rm -rf $HOME/.tmux.conf.local
ln -s $HOME/.dotfiles/.tmux.conf.local $HOME/.tmux.conf.local

# aliases.zsh
rm -rf $HOME/.oh-my-zsh/lib/aliases.zsh
ln -s $HOME/.dotfiles/aliases.zsh $HOME/.oh-my-zsh/lib/aliases.zsh

# .vimrc
rm -rf $HOME/.vimrc
ln -s $HOME/.dotfiles/.vimrc $HOME/.vimrc
# Create ~/.vim/backups, ~/.vim/swaps, ~/.vim/undo as used in .vimrc
mkdir $HOME/.vim/backups
mkdir $HOME/.vim/swapsv
mkdir $HOME/.vim/undo

# hyper.js
rm -rf $HOME/.hyper.js
ln -s -f $HOME/.dotfiles/.hyper.js $HOME/.hyper.js

# bin/
# battery-status
rm -rf /usr/local/bin/battery-status
ln -s $HOME/.dotfiles/bin/battery-status /usr/local/bin/battery-status
# fix-camera
rm -rf /usr/local/bin/fix-camera
ln -s $HOME/.dotfiles/bin/fix-camera /usr/local/bin/fix-camera